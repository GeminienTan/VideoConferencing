<!-- Start of Edit Profile -->
<div class="modal fade" id="editProfile" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered " role="document">
        <div class="requests">
            <div class="title">
                <h1>Update your profile details</h1>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
            </div>
            <div class="content">
                <form action="editProfile" method="POST" >
                    <input type="text" class="form-control" name="u_id" value="<%= u_id %>" hidden>
                    <div class="form-group">
                        <label for="user">Username</label>
                        <input type="text" class="form-control" id="name" name="u_name" value="<%= account[0].u_name %>"  required>
                    </div>
                
                    <div class="form-group">
                        <label for="user">Gender</label>
                        <% if(account[0].u_gender == 'F'){ %>
                            <div class="field">
                                <label for="gender"> F</label>
                                <input type="radio" name="u_gender" value="F" checked>
                            </div>
                            <div class="field">
                                <label for="gender">M</label>
                                <input type="radio" name="u_gender" value="M" >
                            </div>	
                        <% } 
                        else if(account[0].u_gender == 'M'){ %>
                            <div class="field">
                                <label for="gender"> F</label>
                                <input type="radio" name="u_gender" value="F" >
                            </div>
                            <div class="field">
                                <label for="gender">M</label>
                                <input type="radio" name="u_gender" value="M" checked>
                            </div>
                        <% } 
                        else { %>
                            <div class="field">
                                <label for="gender"> F</label>
                                <input type="radio" name="u_gender" value="F" >
                            </div>
                            <div class="field">
                                <label for="gender">M</label>
                                <input type="radio" name="u_gender" value="M" >
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="form-group">
                        <label for="birthday">Birthday</label>
                        <input type="date" class="form-control" id="birthday" name="u_dob" value ="<%= moment(account[0].u_dob).format( 'YYYY-MM-DD') %>"required>
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone Number <span></span></label>
						<input type="text" class="form-control" id="phone" name="u_phone" value="<%= account[0].u_phone %>">
                    </div>

                    <div class="form-group">
                        <label for="email">Email <span>*</span></label>
						<input type="email" class="form-control" id="email" name="u_email" value="<%= account[0].u_email %>" required>
                    </div>

                    <button type="submit" class="btn button w-100">Apply</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End of Edit Profile -->

<!-- Start of Edit Password -->
<div class="modal fade" id="editPassword" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered " role="document">
        <div class="requests">
            <div class="title">
                <h1>Edit Password</h1>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
            </div>
            <div class="content">
                <form action="editPassword" method="POST" >
                    <input type="text" class="form-control" name="u_id" value="<%= u_id %>" hidden>
                    <div class="form-group">
                        <label for="oldpassword">Enter Current Password</label>
                        <input type="password" class="form-control" id="old_pwd" name="old_pwd">
                    </div>
                    <div class="form-group">
                        <label for="user">Enter New Password:</label>
                        <input type="password" class="form-control" id="password" name="password" min="6" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters" required>
                    </div>
                    <div class="messagePwd" id="validatePwd">
                        <p><b>Password must contain the following:</b><p>
                            <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                            <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                            <p id="number" class="invalid">A <b>number</b></p>
                            <p id="length" class="invalid">Minimum <b>8 characters</b></p>
                    </div>
                    <div class="form-group">
                        <label for="user">Confirm Password</label>
                        <input type="password" class="form-control" id="confirm_password" name="confirm_password">
                        <div class="messagePwd" id="confirmPwd"></div>
                    </div>
                    
                    <button type="submit" class="btn button w-100">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End of Edit Password -->

