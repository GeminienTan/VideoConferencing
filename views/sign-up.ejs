<html lang="en">

<head>
		<meta charset="utf-8">
		<title>Sign Up – Swipe</title>
		<meta name="description" content="#">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Bootstrap core CSS -->
		<link href="dist/css/lib/bootstrap.min.css" type="text/css" rel="stylesheet">
		<!-- Swipe core CSS -->
		<link href="dist/css/swipe.min.css" type="text/css" rel="stylesheet">
		<!-- Favicon -->
		<link href="dist/img/favicon.png" type="image/png" rel="icon">

<style>
/* The message box is shown when the user clicks on the password field */
.message {
  display:none;
  border:3px dashed #2196F3;
  border-radius: 8px;
  color: #000;
  position: relative;
}

.message p {
  margin:0px;
  text-align: left;
}

/* Add a green text color and a checkmark when the requirements are right */
.valid {
  color: green;
}

.valid:before {
  position: relative;
  left: 10px;
  margin-right: 50px;
  content: "✔";
}

/* Add a red text color and an "x" when the requirements are wrong */
.invalid {
  color: red;
}

.invalid:before {
  position: relative;
  left: 10px;
  margin-right: 50px;
  content: "✖";
}
	</style>
	</head>
	<body class="start">
		<main>
			<div class="layout">
				<!-- Start of Sign Up -->
				<div class="main order-md-2">
					<div class="start">
						<div class="container">
							<div class="col-md-12">
								<div class="content">
									<h3>Create Account for Free</h3>
									<form class="signup" action="sign-up" method="POST">
										<div class="form-parent">
											<div class="form-group">
												<input type="text"  class="form-control" id="fname" name="fname"placeholder="First Name" required>
												<button class="btn icon"><i class="material-icons">person_outline</i></button>
											</div>
											<div class="form-group">
												<input type="text" class="form-control" id="lname" name="lname" placeholder="Last Name" required>
											</div>
										</div>
										<div class="form-parent">
											<div class="form-group">
												<input type="text" class="form-control" id="phone" name="phone" placeholder="Phone" required>
												<button class="btn icon"><i class="material-icons">call_outline</i></button>
											</div>
											<div class="form-group">
												<input type="date" class="form-control" id="birthday" name="birthday" placeholder="Birthday" required>
												<button class="btn icon"><i class="material-icons">cake_outline</i></button>
											</div>
										</div>
										<div class="form-parent">
										<div class="form-group">
                                            <input type="text" class="form-control" placeholder="Gender" disabled="disabled" readonly>
										    <button class="btn icon"><i class="material-icons">wc</i></button>
										</div>
										<div class="form-group">
											<label for="gender" class="form-control"> Female<input type="radio" id="gender" name="gender" value="F" checked></label>
											
										</div>
										<div class="form-group">
											<label for="lastName" class="form-control">Male<input type="radio" id="gender" name="gender" value="M" ></label>
											
										</div>
										</div>
										<div class="form-group">
											<input type="email" class="form-control" id="email" name="email"placeholder="Email Address" required>
											<button class="btn icon"><i class="material-icons">mail_outline</i></button>
										</div>
										<div class="form-group">
											<input type="password" class="form-control" id="password" name="password" placeholder="Password" min="6" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters" required>
											<button class="btn icon"><i class="material-icons">lock_outline</i></button>
										</div>
										<div class="message" id="validatePwd">
											<p><b>Password must contain the following:</b><p>
												<p id="letter" class="invalid">A <b>lowercase</b> letter</p>
												<p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
												<p id="number" class="invalid">A <b>number</b></p>
												<p id="length" class="invalid">Minimum <b>8 characters</b></p>
										</div>
										<div class="form-group">
											<input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Confirm Password" title="Must be same as Password"required>
											<button class="btn icon"><i class="material-icons">lock_outline</i></button>
										</div>
										<div class="message" id="confirmPwd">
										</div>
										
										<br><button type="submit" class="btn button">Sign Up</button>
										<div class="callout">
											<span>Already a member? <a href="/">Sign In</a></span>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- End of Sign Up -->
				<!-- Start of Sidebar -->
				<div class="aside order-md-1">
					<div class="container">
						<div class="col-md-12">
							<div class="preference">
								<h2>Already a member?</h2>
								<p>Log in to your account to start sharing and connecting with your friends, family, and colleagues.</p>
								<a href="/" class="btn button">Sign In</a>
							</div>
						</div>
					</div>
				</div>
				<!-- End of Sidebar -->
			</div> <!-- Layout -->
		</main>
