			<div class="layout">
				<!-- Start of Sign In -->
				<div class="main d-flex justify-content-center cside">
					<div class="start">
						<div class="container">
							<div class="col-md-12">
								<div class="content">
									<h1>You're invited to join this meeting.</h1>
									<form action="addGuest" method="POST">
										<div class="form-group">
											<input type="text" id="m_id" name="m_id" class="form-control" value="<%= m_id%>" hidden>
											<input type="text" id="room" name="roomId" class="form-control" value="<%= roomId%>" readonly>
											<button class="btn icon"><i class="material-icons">link_outline</i></button>
										</div>
										<div class="form-group">
											<input type="text" id="name" name="name" class="form-control" placeholder="Let Everyone Know Who You Are" required>
											<button class="btn icon"><i class="material-icons">person_outline</i></button>
										</div>
                                        <div class="form-parent">
                                            <div class="form-group">
                                                <input class="form-control" disabled="disabled" readonly>
                                                <button class="btn icon"><i class="material-icons">wc</i></button>
                                            </div>
                                            <div class="form-group">
                                                <label for="gender" class="form-control">Female<input type="radio" id="gender" name="gender" value="F" checked></label>
												
                                            </div>
                                            <div class="form-group">
                                                <label for="gender" class="form-control">Male<input type="radio" id="gender" name="gender" value="M" ></label>
                                            </div>
                                        </div>
										<div class="set">
											<div class="details">
												<h5>Switch on your camera </h5>
												
											</div>
											<button class="btn icon text-white"><i class="material-icons md-48" >videocam</i></button>
											
											<label class="switch">
												<input type="checkbox" name="cameraOn" value="true" checked  >
												<span class="slider round"></span>
											</label>
											<p> You can switch on or off the camera during the meeting.</p>
										</div>


										<button type="submit" class="btn button">Enter meeting now</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- End of Sign In -->
			</div> <!-- Layout -->
