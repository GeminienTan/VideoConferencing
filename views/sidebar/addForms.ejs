<!-- Start of Create Room -->
<div class="modal fade" id="addNewRoom" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered border border-info" role="document">
        <div class="requests">
            <div class="title">
                <h1>Create a Room</h1>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
            </div>
            <div class="content">
                <form action="addRoom" method="POST">
                    <input type="hidden" id="owner_id" name="owner_id" value="<%= u_id %>">
                    <div class="form-group">
                        <label for="participant">Room Title:</label>
                        <input type="text" class="form-control" id="roomName" name="r_title" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Room Description:</label>
                        <textarea class="text-control" id="roomDesc" name="r_desc" placeholder="The room is for ..." ></textarea>
                    </div>
                    <div class="form-group">
                        <label for="participant">Channel Title:</label>
                        <input type="text" class="form-control" id="channelTitle" name="c_title" placeholder="Default" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Channel Description:</label>
                        <textarea class="text-control" id="channelDesc" name="c_desc" placeholder="This channel is for ..."></textarea>
                    </div>
                    <div class="form-group">
                        <label for="participant">Invite User to this Room:</label>
                        <select class="form-control" multiple data-role="tagsinput" id="s_attendees" name="c_attendees">
                            <option value="jQuery">jQuery</option>
                            <option value="Angular">Angular</option>
                            <option value="React">React</option>
                            <% for (var i in contact_name){%>
                                <option value="<%= contact_name[i] %>"><%= contact_name[i] %></option>
                            <%} %> 
                        </select>
                    </div>
                    <button type="submit" class="btn button w-100">Create Room</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End of Create Room -->

<!-- Start of Add Contacts -->
<div class="modal fade" id="addNewContact" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered border border-info" role="document">
        <div class="requests">
            <div class="title">
                <h1>Add your friends</h1>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
            </div>
            <div class="content">
                <form action="/addContact" method="POST">
                    <p>Enter email address</p>
                    <div class="form-group">
                        <label for="user">Email:</label>
                        <input type="email" class="form-control" id="ct_email" name="ct_email" placeholder="Enter email address" >
                    </div>
                    <button type="submit" class="btn button w-100">Add to Contact</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End of Add Contacts-->

<!-- Start of Add Chat -->
<div class="modal fade" id="addNewChat" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered  border border-info " role="document">
        <div class="requests">
            <div class="title">
                <h1>Start new chat</h1>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
            </div>
            <div class="content">
                <form>
                    <div class="form-group">
                        <label for="participant">Recipient:</label>
                        <input type="text" class="form-control" id="participant" placeholder="Add recipient..." required>
                        <div class="user" id="recipient">
                            <img class="avatar-sm" src="dist/img/avatars/avatar-female-5.jpg" alt="avatar">
                            <h5>Keith Morris</h5>
                            <button class="btn"><i class="material-icons">close</i></button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea class="text-control" id="message" placeholder="Send your welcome message...">Hi Friends ! </textarea>
                    </div>
                    <button type="submit" class="btn button w-100">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End of Add Chat -->

<!-- Start of Add Schedule -->
<div class="modal fade" id="addNewSchedule" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered border border-info" role="document">
        <div class="requests">
            <div class="title">
                <h1>Add a Schedule</h1>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
            </div>
            <div class="content">
                <form action="addSchedule" method="POST" >
                    <input type="text" class="form-control" name="owner_id" value="1" hidden>
                    <div class="form-group">
                        <label for="user">Meeting Title</label>
                        <input type="text" class="form-control" id="s_title" name="s_title">
                    </div>
                
                    <div class="form-group">
                        <label for="user">Meeting Objective</label>
                        <input type="text" class="form-control" id="s_objective" name="s_objective">
                    </div>
                    
                    <div class="form-group">
                        <label for="user">Meeting Date</label>
                        <input type="date" class="form-control" id="s_date" name="s_date">
                    </div>

                    <div class="form-group">
                        <label for="user">Meeting Start Time</label>
                        <input type="time" class="form-control" id="s_stime"  name="s_stime">
                    </div>

                    <div class="form-group">
                        <label for="user">Meeting End Time</label>
                        <input type="time" class="form-control" id="s_etime"  name="s_etime">
                    </div>

                    <div class="form-group">
                        <label for="user">Required Attendees</label>
                        <select class="form-control" multiple data-role="tagsinput" id="s_attendees" name="s_attendees">
                        <option value="jQuery">jQuery</option>
                        <option value="Angular">Angular</option>
                        <option value="React">React</option>
                        <option value="Vue">Vue</option>
                        </select>
                    </div>


                    <button type="submit" class="btn button w-100">Add Schedule</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End of Add schedule -->



